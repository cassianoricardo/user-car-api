#!/usr/bin/env groovy
pipeline {
    agent any
    tools {
        maven 'Maven 3.9.4'
        jdk 'OpenJDK'
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage("Deployment") {
            steps {
                   sh 'nohup mvn -Dmaven.port=8081 spring-boot:run &'
            }
        }
    }
}