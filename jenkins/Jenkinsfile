#!/usr/bin/env groovy
pipeline {
    agent any
    tools {
        maven 'Maven 3.9.4'
        jdk 'OpenJDK'
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage("Deployment") {
            steps {
                   sh 'nohup java -Dserver.port=8081 -jar target/user-car-api-0.0.1.jar &'
            }
        }
    }
}