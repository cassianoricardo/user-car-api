#!/usr/bin/env groovy
pipeline {
    agent any
    tools {
        maven 'Maven 3.9.4'
        jdk 'jdk18'
    }
    stages {
        stage('Build') {
            steps {
                bat 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('SonarQube') {
            steps {
                bat 'mvn sonar:sonar -X -Dsonar.host.url=http://localhost:9000 -Dsonar.token=squ_8cee5d904f73edc2f2633b8540536e7aadceda3e'
            }
        }
        stage('Deployment') {
            steps {
                bat 'nohup ./mvnw spring-boot:run -Dserver.port=8081 &'
            }
        }
    }
}