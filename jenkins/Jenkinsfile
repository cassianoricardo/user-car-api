#!/usr/bin/env groovy
pipeline {
    agent any
    tools {
        maven 'Maven 3.9.4'
        jdk 'OpenJDK'
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Deployment') {
            steps {
             sh 'fuser -k 8081/tcp || true'
             sh "sudo mvn spring-boot:run -Dserver.port=8081"
            }
        }
    }
}