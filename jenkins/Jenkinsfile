#!/usr/bin/env groovy
pipeline {
    agent any
    tools {
        maven 'Maven 3.9.4'
        jdk 'OpenJDK'
    }
    stages {
        stage('Deployment') {
            steps {
             sh "kill -9 $(lsof -ti tcp:8081)"
             sh 'nohup ./mvnw spring-boot:run -Dserver.port=8081 &'
            }
        }
    }
}